<?xml version="1.0"?>
<bindings xmlns="http://www.mozilla.org/xbl">
<binding id="keypress">
<content xmlns:xul="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul">
  <xul:label class="desc" value="Keypress in " />
  <xul:vbox>
    <xul:box class="node-selection" />
    <xul:hbox>
      <xul:label value="Write : " />
      <xul:textbox anonid="keys" />
    </xul:hbox>
  </xul:vbox>
</content>
<implementation>
<constructor>
  this.node = document.getAnonymousElementByAttribute(this, "class", "node-selection");
  this.keys = document.getAnonymousElementByAttribute(this, "anonid", "keys");
</constructor>

<method name="restore">
<parameter name="action" />
<body><![CDATA[
  this.node.restore(action.node);
  this.keys.value = action.keys;
]]></body>
</method>

<method name="getActionObject">
<body><![CDATA[
  return {
    node : this.node.getActionObject(),
    keys : this.keys.value
  };
]]></body>
</method>

<method name="executed">
<parameter name="success" />
<parameter name="result" />
<body><![CDATA[
  
]]></body>
</method>

</implementation>
</binding>
</bindings>
